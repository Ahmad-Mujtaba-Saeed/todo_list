<body>
    <div class="container">
        <form action="/post/add_task/" method="post">
        <div class="mt-3  d-flex ">
                <input type="text" name="task" class="form-control me-1" id="todo" placeholder="ENTER TODO TASK">
                <input type="time" name="time" class="form-control" id="time" placeholder="Enter the Time">
                <button class="mx-1 btn btn-success add" name="btn_id1" value="ADD"  type="submit">ADD_TASK</button>    
                <button class="btn btn-danger del" name="btn_id1" value="DeleteALL" type="submit">Delete_All</button>
            </div>
        </form>    
<% let number = data.counter.counter 
console.log("this munber",number)
// const new_data = data.todo
%>
        <div class="row">
            <div class="col">
                <ul id="listarray">

                        <% if(number != 0){
                            const valuesArray = Object.values(data.todo);
                            for(let i = 0; i < number; i++){ %>
                    <li>    
                        <form action="/todo/Update" method="post">
                        <div class="mt-3  d-flex ">
                        <input type="text" name="task" class="form-control me-1" value="<%= valuesArray[i].todo %>" id="todo" placeholder="ENTER TODO TASK">
                        <input type="time" name="time" class="form-control" value="<%= valuesArray[i].time %>" id="time" placeholder="Enter the Time">
                        <input type="hidden"  name="number" value="<%= i %>">
                        <button class="mx-1 btn btn-success add" name="btn_id" value="Update" type="submit">Update</button>
                        <button class="mx-1 btn btn-warning add" name="btn_id" value="Delete" type="submit">Delete</button>    
                        </div>
                        </form>
                    </li>
                        <% }} %>
                </ul>
            </div>
        </div>
    </div>
    
</body>
</html>